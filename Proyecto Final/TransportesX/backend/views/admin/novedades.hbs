<div class="container novedades">
    <div class="row mb-5">
        <div class="col">
            <p class="text-end">Hola {{usuario}}! <a href="/admin/login/logout" class="btn btn-sm btn-danger">Cerrar sesión <i class="fa fa-sign-out-alt"></i></a></p>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-7">
            <h3>Listado de Novedades</h3>
        </div>
        <div class="col-5 text-end">
            <a href="/admin/novedades/agregar" class="btn btn-success"><i class="fa fa-plus"></i> Nuevo</a>
        </div>
    </div>
    <div class="row mb-4">
        <div class="col">
            <table class="table">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">Titulo</th>
                        <th scope="col" class="text-center">Imagen</th>
                        <th scope="col" class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each novedades}}
                    <tr>
                        <th scope="row">{{id}}</th>
                        <td>{{titulo}}</td>
                        <td class="text-center">{{{imagen}}}</td>  {{!-- si usamos dos corchetes muestra el código html etiqueta <img> que trae de cloudinary --}}
                        <td class="text-center">
                            <a href="/admin/novedades/modificar/{{id}}" class="btn btn-sm btn-secondary mb-1" title="Modificar"><i class="fa fa-pencil"></i></a>
                            {{#if visible}}
                                <a href="/admin/novedades/ocultar/{{id}}" class="btn btn-sm btn-secondary mb-1" title="Mostrar/Ocultar"><i class="fa fa-eye"></i></a>
                            {{else}}
                                <a href="/admin/novedades/mostrar/{{id}}" class="btn btn-sm btn-secondary mb-1" title="Mostrar/Ocultar"><i class="fa fa-eye-slash"></i></a>
                            {{/if}}
                            <a href="/admin/novedades/eliminar/{{id}}" class="btn btn-sm btn-secondary mb-1" title="Eliminar"><i class="fa fa-trash"></i></a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col text-end">
            <a href="/admin/novedades/papelera" class="btn btn-outline-primary"><i class="fa-regular fa-trash-can "></i> Papelera</a>
        </div>
    </div>
</div>